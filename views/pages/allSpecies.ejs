<%-include('../partials/header') %>

<main class="main" id="allSpeciesMain">
    <div class="container">
        <div class="row row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            <% data.forEach(item =>{%>
                <div class="col">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title card-heading">
                                <%= item.species %>
                            </h2>
                        </div>
                        <div class="card-footer">
                            <p class="card-footer-text">
                                See <a href="/species/species/<%= item.species %>" class="card-footer-link">People who fall under this catagory!</a>
                            </p>
                        </div>
                    </div>
                </div>
            <%})%>
        </div>
    </div>
</main>


<%-include('../partials/footer') %>
